<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".RefineActivity">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="54.60dp"
        android:background="@color/puce"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_marginTop="-8dp">

        <Button
            android:id="@+id/backbtn"
            android:layout_width="27dp"
            android:layout_height="46dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#00000000"
            android:drawableStart="@drawable/arrow"
            android:gravity="center"
            android:onClick="refinebtn"
           />


        <TextView
            android:layout_width="270dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:text="Refine"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="20dp"
            android:text="Select Your Availability"
            android:textColor="@color/puce"
            android:textSize="15sp" />

    <Spinner
        android:id="@+id/spinner"
        android:background="@drawable/down"
        android:layout_width="296dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="20dp"
        android:text="Add Your Status"
        android:textColor="@color/puce"
        android:textSize="15sp" />

    <EditText
        android:layout_width="600dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border"
        android:paddingLeft="10dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="240dp"
        android:layout_marginBottom="20dp"
        android:text="Select Hyper Local Distance"
        android:textColor="@color/puce"
        android:textSize="15sp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:progressDrawable="@drawable/ruler"
        android:background="@drawable/seekbar"
        android:thumb="@drawable/slider"
        />

    <TextView
        android:id="@+id/purpose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="20dp"
        android:text="Select Purpose"
        android:textColor="@color/puce"
        android:textSize="15sp" />

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="330dp">

        <Button
            android:id="@+id/coffeebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/chipgrp"
            android:padding="10dp"
            android:onClick="savebtn"
            android:text="Coffee"
            android:textColor="@color/puce"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/actbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/chipgrp"
            android:padding="10dp"
            android:text="Acting"
            android:textColor="@color/puce"
            android:textSize="18dp"
            app:layout_constraintEnd_toStartOf="@+id/readbtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/matrimonybtn"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/matrimonybtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/chipgrp"
            android:padding="10dp"
            android:text="Matrimony"
            android:textColor="@color/puce"
            android:textSize="18dp"
            app:layout_constraintEnd_toStartOf="@+id/friendbtn"
            app:layout_constraintTop_toBottomOf="@+id/datebtn"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/blogbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:background="@drawable/chipgrp"
            android:padding="10dp"
            android:text="Blogging"
            android:textColor="@color/puce"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chip8"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/photobtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="140dp"
            android:background="@drawable/chipgrp"
            android:padding="10dp"
            android:text="Photography"
            android:textColor="@color/puce"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/gardenbtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/datebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/chipgrp"
            android:padding="10dp"
            android:text="Dating"
            android:textColor="@color/puce"
            android:textSize="18dp"
            app:layout_constraintEnd_toStartOf="@+id/blogbtn"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chip8" />

        <Button
            android:id="@+id/moviebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/chipgrp"
            android:padding="10dp"
            android:text="Movies"
            android:textColor="@color/puce"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/blogbtn"
            app:layout_constraintTop_toBottomOf="@+id/starbtn"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/hangoutbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/chipgrp"
            android:padding="10dp"
            android:text="Hangout"
            android:textColor="@color/puce"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@+id/coffeebtn"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/trekbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/chipgrp"
            android:padding="10dp"
            android:text="Trekking"
            android:textColor="@color/puce"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/friendbtn"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/starbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/chipgrp"
            android:padding="10dp"
            android:text="Star Gazing"
            android:textColor="@color/puce"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.057"
            app:layout_constraintStart_toEndOf="@+id/chip8"
            app:layout_constraintTop_toBottomOf="@+id/dinnerbtn"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/gardenbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="140dp"
            android:background="@drawable/chipgrp"
            android:padding="10dp"
            android:text="Gardening"
            android:textColor="@color/puce"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/friendbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="70dp"
            android:background="@drawable/chipgrp"
            android:padding="10dp"
            android:text="Friendship"
            android:textColor="@color/puce"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/moviebtn" />

        <Button
            android:id="@+id/chip8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/chipgrp"
            android:padding="10dp"
            android:text="Travelling"
            android:textColor="@color/puce"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coffeebtn"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/dinnerbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:background="@drawable/chipgrp"
            android:padding="10dp"
            android:text="Dinner"
            android:textColor="@color/puce"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/hangoutbtn"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/readbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/chipgrp"
            android:padding="10dp"
            android:text="Reading"
            android:textColor="@color/puce"
            android:textSize="18dp"
            app:layout_constraintEnd_toStartOf="@+id/trekbtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/matrimonybtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save &amp; Explore"
        android:layout_marginTop="720dp"
        android:onClick="savebtn"
        android:textColor="@color/puce"
        android:layout_marginLeft="130dp"
        android:background="@drawable/border1"
        android:padding="10dp"
        />

</RelativeLayout>